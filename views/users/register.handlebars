<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img class="logo" src="/img/vidjot.svg" alt="">
      <h3 class="text-center">Account Register</h3>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" type="text" class="form-control" required value={{name}} >
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input name="email" type="email" class="form-control" required value={{email}} >
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input name="password" type="password" class="form-control" required value={{password}} >
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input name="password2" type="password" class="form-control" required value={{password2}} >
        </div>
        <div class="col text-center">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
        
      </form>
    </div>
  </div>
</div>